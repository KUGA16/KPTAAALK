<% users.each do |user| %>
  <div class="card" style="width: 32%; display: inline-block;">
    <div class="card-image waves-effect waves-block waves-light">
      <%= attachment_image_tag user, :profile_image, :fill, 233, 175, fallback: "no_image.jpg" %>
    </div>
    <div class="card-content friend-introduction center">
      <span class="card-title" style="border-bottom: solid 1px #ff7f50;">
        <%= link_to user_path(user) do %>
          <%= user.nick_name %>
        <% end %>
      </span>
      <%= user.introduction %>
    </div>
    <div class="card-action center">
      <% if current_user != user %>
        <!-- フォローボタンをajaxで実装 -->
        <span id="follows_buttons_<%= user.id %>">
          <%= render 'shared/follow_button', user: user %>
        </span>
      <% else %>
        <%= link_to "マイページ", user_path(user), class: "btn" %>
      <% end %>
    </div>
  </div>
<% end %>
