<p>メンバー追加</p>
<div class="row">
  <div class="col s12 center">
    <%= attachment_image_tag @group, :group_image, :fill, 350, 250, fallback: "no_group_image.jpg", size:'350x250' %><br>
    <%= @group.name %>
  </div>
  グループ参加ユーザー
  <div class="col s12 center">
    <% @join_users.each do |join_user| %>
      <%= attachment_image_tag join_user.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %><br>
      <%= join_user.user.nick_name %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12 center">
    <%= form_with model: [@group,@group_user_new], local: true do |f| %>
      <% @can_invite_users.each do |user| %>
        <label>
          <%= f.check_box :user_id, { multiple: true ,include_hidden: false }, checked_value = user.id %>
          <span>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
            <%= user.nick_name %>
          </span>
        </label>
      <% end %>
      <div class="actions">
        <%= f.submit "次へ", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
