<!-- フォロワー一覧 -->
<% users.each do |user| %>
  <div class="card" style="width: 32%; display: inline-block;">
    <div class="card-image waves-effect waves-block waves-light">
      <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %>
    </div>
    <div class="card-content center" style="height: 115px;">
      <span class="card-title">
        <%= link_to user_path(user) do %>
          <%= user.nick_name %>
        <% end %>
      </span>
      <%= user.introduction %>
    </div>
    <div class="card-action center">
      <% if current_user != user %>
<!-- フォローボタンをajaxで実装 -->
        <span id="follows_buttons_<%= user.id %>">
          <%= render 'shared/follow_button', user: user %>
        </span>
      <% end %>
    </div>
  </div>
<% end %>

<!-- ページネーション -->
<% if users == @following_users %>
  <%= paginate users, :param_name => 'following_user', class: "paginate", remote: true %>
<% else users == @follower_users %>
  <%= paginate users, :param_name => 'follower_user', class: "paginate", remote: true %>
<% end %>
