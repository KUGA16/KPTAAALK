
<h1>マイページ</h1>
<div class="row">
  <div class="col s5">
    <!-- ユーザープロフィール -->
    <%= render 'profile', user: @user %>
  </div>
</div>
<!-- ここからはcurrent_userのみ -->
<% if @user == current_user %>

  <div class="row">
    <div class="col m6">
      <p>参加グループ</p>

      <% @group_users.each do |group_user| %>
        <%= attachment_image_tag group_user.group, :group_image, :fill, 150, 150, fallback: "no_group_image.jpg", size:'150x150' %>
        <%= group_user.group.name %>
      <% end %>

    </div>
    <div class="col m6">
      <p>フレンド？一覧</p>
    </div>
  </div>
<!-- ここまで -->

  <p>サイト退会リンク</p>
<% end %>
