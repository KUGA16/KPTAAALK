
<%= render 'shared/flash_message' %> <!-- サクセスメッセージ -->

<h6>マイページ</h6>
<div class="row">
  <%= render 'profile', user: @user %><!-- プロフィール -->
  <%= render 'shared/groups', is_notification: @is_notification, invited_groups: @invited_groups, join_groups: @join_groups %>
</div>


  <div class="row">
    <h6>お仲間</h6>
    <% @follow_users.each do |user| %>
      <div class="col s2">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %><br>
          <%= user.nick_name %><br>
        <% end %>
        <%= user.introduction %>
      </div>
    <% end %>
  </div>
