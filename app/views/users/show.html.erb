
<%= render 'layouts/flash_message' %> <!-- サクセスメッセージ -->
<h4>マイページ</h4>

<div class="row profile">
    <%= render 'profile', user: @user %><!-- プロフィール -->
</div>
<!-- ここからはcurrent_userのみ -->
<% if @user == current_user %>
  <div class="row">
    <% if @is_notification.present? %> <!--グループに招待されているか -->
      <h6>招待されているグループ</h6>
      <% @invited_groups.each do |group_user| %>
        <%= link_to group_path(group_user.group) do %>
          <%= attachment_image_tag group_user.group, :group_image, :fill, 150, 150, fallback: "no_group_image.jpg", size:'150x150' %>
          <%= group_user.group.name %>
          <%= link_to "参加", group_group_users_path(group_user.group.id), method: :put %>
          <%= link_to "不参加", group_group_users_path(group_user.group.id), method: :delete, data: {confirm: "本当に参加しませんか？"}  %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <h6>参加グループ</h6>
    <% @join_groups.each do |group_user| %>
      <div class="col s2">
        <%= link_to group_path(group_user.group) do %>
          <%= attachment_image_tag group_user.group, :group_image, :fill, 150, 150, fallback: "no_group_image.jpg", size:'150x150' %>
          <%= group_user.group.name %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <h6>お仲間</h6>
    <% @follow_users.each do |user| %>
      <div class="col s2">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %><br>
          <%= user.nick_name %><br>
        <% end %>
        <%= user.introduction %>
      </div>
    <% end %>
  </div>
<% end %>
