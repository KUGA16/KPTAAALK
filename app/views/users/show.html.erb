
<h3>マイページ</h3>
<div class="row">
  <div class="col center">
    <!-- ユーザープロフィール -->
    <%= render 'profile', user: @user %>
  </div>
</div>
<!-- ここからはcurrent_userのみ -->
<% if @user == current_user %>
  <div class="row">
    <div class="col s6">
      <p>参加グループ</p>
      <% @group_users.each do |group_user| %>
        <%= attachment_image_tag group_user.group, :group_image, :fill, 150, 150, fallback: "no_group_image.jpg", size:'150x150' %>
        <%= group_user.group.name %>
      <% end %>
    </div>

    <p>メンバー</p>
    <div class="col s6">
      <%= render 'search', users: @follow_users %>
    </div>
  </div>
<% end %>
<!-- ここまで -->
  <p>サイト退会リンク</p>
