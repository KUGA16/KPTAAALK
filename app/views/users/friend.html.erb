<!-- お仲間ページ -->
<div class="row">

  <%= render 'profile', user: @user %>

  <div class="col s12 m9">
    <div class="card-panel teal lighten-4 z-depth-0">
      <span class="white-text">
        <h6>お仲間</h6>
      </span>
    </div>
  </div>
<!-- タブメニュー -->
  <div class="col s12 m9">
    <ul class="tabs tabs-fixed-width tab-demo z-depth-0">
      <li class="tab"><a href="#test1">フォロー</a></li>
      <li class="tab"><a href="#test2">フォロワー</a></li>
      <li class="tab"><a href="#test3">お仲間追加</a></li>
    </ul>
  </div>
<!-- フォロー -->
  <div id="test1" class="col s9 m9">
    <% @following_users.each do |user| %>
      <div class="card" style="width: 32%; display: inline-block;">
        <div class="card-image waves-effect waves-block waves-light">
          <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %>
        </div>
        <div class="card-content center" style="height: 115px;">
          <span class="card-title">
            <%= user.nick_name %>
          </span>
          <%= user.introduction %>
        </div>
        <div class="card-action center">
          <% if user.followed_by?(current_user) %>
              <%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete, class: "btn" %>
          <% else %>
              <%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

<!-- フォロワー -->
  <div id="test2" class="col s12 m9">
    <% @follower_users.each do |user| %>
      <div class="card" style="width: 32%; display: inline-block;">
        <div class="card-image waves-effect waves-block waves-light">
          <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %>
        </div>
        <div class="card-content center" style="height: 115px;">
          <span class="card-title">
            <%= user.nick_name %>
          </span>
          <%= user.introduction %>
        </div>
        <div class="card-action center">
          <% if user.followed_by?(current_user) %>
              <%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete, class: "btn" %>
          <% else %>
              <%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<!-- お仲間検索 -->
  <div id="test3" class="col s12 m9">
    <div class="search_form">
      <div class="form center">
        <%= search_form_for @q, url: result_users_path  do |f| %>
          <%= f.label :nick_name %>
  <!-- nameカラムの単語の一部分を含むものを検索 -->
          <%= f.search_field :nick_name_cont %>
          <%= f.submit "検索", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>

    <% @search_users.each do |user| %>
      <div class="col s2">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %><br>
          <%= user.nick_name %><br>
        <% end %>
        <%= user.introduction %>
  <!-- フォローボタン　-->
        <% if current_user != user %>
          <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete, remote: true, class: "btn cyan" %></p>
          <% else %>
            <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn cyan" %></p>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
