
<% users.each do |user| %>
  <%= link_to user_path(user) do %>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %><br>
    <%= user.nick_name %><br>
  <% end %>
  <%= user.introduction %>
  <!-- フォローボタン　-->
  <%= render 'follow_button', user: user %>
<% end %>
