<!-- ユーザープロフィール -->
<div class="col s3 m3">
  <div class="card">
    <div class="card-image">
      <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %>
      <span class="card-title">
      	<% if user == current_user %>
					<%= user.name %>
				<% end %>
      </span>
    </div>
    <div class="card-content center">
      <%= user.nick_name %><br>
			<%= user.introduction %><br>
    </div>
      <div class="card-action center">
        <p>
          <%= link_to follows_user_path(user) do %>
					  <%= user.followings.count %><br>
				  <% end %>
          フォロー
        </p>
        <p>
          <%= link_to followers_user_path(user) do %>
				  <%= user.followers.count %><br>
			    <% end %>
          フォロワー
        </p>
      </div>
		<% if user == current_user %><!-- ログインユーザーのみ表示　-->
    	<div class="card-action center">
				<i class="material-icons">person</i>
				<%= link_to "プロフィール編集", edit_user_path(user), style: "white" %>
			</div>
			<div class="card-action center">
				<i class="material-icons">exit_to_app</i>
				<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
			</div>
		<% end %>
  </div>
</div>
