<!-- プロフィール編集ページ -->
<% @page_title = "プロフィール編集" %>
<div class="row">
<!-- エラーメッセージ -->
  <%= render 'shared/error_message', something: @user %>

  <div class="col s12 m12 center" style="display: flex; justify-content: center; margin-top: 50px;">
    <%= form_with model: @user, local: true do |f| %>
      <div class="field" style="margin-bottom: 20px;">
        <%= f.label :profile_image %><br>
        <%= f.attachment_field :profile_image, direct: true %>
      </div>

      <div class="field">
        <%= f.label :nick_name %><br>
        <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name" %>
      </div>

      <div class="field">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "materialize-textarea" %>
      </div>

      <div class="action">
        <%= f.submit '保存', class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
