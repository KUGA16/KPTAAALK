<h1>プロフィール編集画面</h1>
  <div class="row">
    <div class="col m5">

      <%= form_with model: @user do |f| %>

        <div class="field">
          <%= f.label :profile_image %><br>
          <%= f.attachment_field :profile_image, placeholder: "画像選択" %>
        </div>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :nick_name %><br>
          <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name" %>
        </div>

        <div class="field">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
        </div>

        <div class="action">
          <%= f.submit '保存' %>
        </div>
      <% end %>

    </div>
  </div>
