<!-- KPTページ -->
<div class="row">
<!-- グループのプロフィール -->
  <div class="col s3 m3">
    <div class="card z-depth-0">
      <%= link_to group_path(@group) do%>
        <div class="card-image">
            <%= attachment_image_tag @group, :group_image, fallback: "no_group_image.jpg" %>
        </div>
        <div class="card-content center">
          <span class="card-title">
            <%= @group.name %>
          </span>
        </div>
      <% end %>
      <div class="card-action center">
        <p>メンバー<%= @group_users.count %>人</p>
      </div>
    </div>
  </div>
</div>

<!-- KPT投稿フォーム -->
<div class="row">
  <div class="kpt_actions">
<!-- remte: trueでjsファイルを探しにいく-->
    <%= link_to "KPTを投稿する", new_group_comment_path, remote: true, class: "btn btn-large" %>
  </div>
</div>
<div id="comment-modal" class="modal">
  <!-- ここに_formが入る -->
</div>

<!-- KPT -->
<div id="comment_box">
<!-- ここにcreate.jsが上書き -->
  <%= render 'kpt_list', keep_comments: @keep_comments, probrem_comments: @probrem_comments, try_comments: @try_comments %>
</div>
