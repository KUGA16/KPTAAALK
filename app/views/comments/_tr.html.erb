        <%= comment.user.nick_name %>
      <%= comment.comment %>
      <span id="rights_buttons_<%= comment.id %>">
        <%= render 'rights/button', comment: comment %>
      </span>
      <%= link_to "削除", group_comment_path(group_id: comment.group_id, id: comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn light-green" %>
    </div>
  <% end %>
</div>
