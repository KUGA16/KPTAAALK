<!-- KPT投稿内容　-->
<% comments.each do | comment | %>
  <div class="col s4">
    <%= attachment_image_tag comment.user, :profile_image, :fill, 80, 80, fallback: "no_group_image.jpg", size:'80x80' %>
    <%= comment.comment %><br>
    <%= comment.user.nick_name %>
    <%= link_to "削除", group_comment_path(group_id:comment.group_id, id:comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
  </div>
<% end %>
