<% @keep_comments.inspect %>

<div class="comments_left">
<!-- keep投稿内容　-->
  <div class="comments drop_area" id="keep">
    <span>Keep</span>
      <% keep_comments.each do |comment| %>
        <div class="col s4 kpt_comments item" name="<%= comment.id %>"　>
          <%= attachment_image_tag comment.user, :profile_image, :fill, 80, 80, fallback: "no_group_image.jpg", size:'80x80' %>
          <%= comment.user.nick_name %>
          <%= comment.comment %>
          <span id="rights_buttons_<%= comment.id %>">
            <%= render 'rights/button', comment: comment %>
          </span>
          <%= link_to "削除", group_comment_path(group_id: comment.group_id, id: comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn light-green" %>
        </div>
      <% end %>
  </div>
  <!-- probrem投稿内容　-->
  <div class="comments p_comments drop_area" id="probrem">
    <span>Probrem</span>
    <% probrem_comments.each do |comment| %>
      <div class="col s4 kpt_comments item" name="<%= comment.id %>">
        <%= attachment_image_tag comment.user, :profile_image, :fill, 80, 80, fallback: "no_group_image.jpg", size:'80x80' %>
        <%= comment.user.nick_name %>
        <%= comment.comment %>
        <span id="rights_buttons_<%= comment.id %>">
          <%= render 'rights/button', comment: comment %>
        </span>
        <%= link_to "削除", group_comment_path(group_id: comment.group_id, id: comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn light-green" %>
      </div>
    <% end %>
  </div>
</div>

<!-- try投稿内容　-->
<div class="comments_right comments drop_area" id="try">
  <span>Try</span>
  <% try_comments.each do |comment| %>
