<!-- グループ作成ページ -->
<div class="row">

  <%= render 'shared/error_message', hoge: @group_new %>

  <div class="col s4 m4 center" style="width: 50%;">
    <%= form_with model: @group_new, lacol: true do |f| %>
      <%= f.label :group_image %>
      <div class="group_new_field">
        <%= f.attachment_field :group_image %>
      </div>
      <div class="group_new_field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="actions">
        <%= f.submit "次へ", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
