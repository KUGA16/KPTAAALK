<!-- グループのプロフィールページ -->
<div class="col s12 m3">
  <div class="card z-depth-0">
    <div class="card-image">
      <%= attachment_image_tag group, :group_image, fallback: "no_group_image.jpg" %>
    </div>
    <div class="card-content center">
      <span class="card-title">
        <%= group.name %>
      </span>
    </div>
    <div class="card-action flex center" style="justify-content: center;">
      <p>メンバー<%= group_users.count %>人</p>
    </div>
<!-- グループ所属ユーザーのみ表示　-->
    <div class="card-action center">
      <i class="material-icons">dashboard</i>
      <%= link_to "#{group.name}のKPT",  group_comments_path(group)  %>
    </div>
    <div class="card-action center">
      <i class="material-icons">people</i>
      <%= link_to "メンバー追加", new_group_group_users_path(group) %>
    </div>
    <div class="card-action center">
      <i class="material-icons">build</i>
      <%= link_to "プロフィール編集", edit_group_path(group) %>
    </div>
    <div class="card-action center">
      <i class="material-icons">exit_to_app</i>
      <%= link_to "グループ退会", group_group_users_path(group), method: :delete, data: {confirm: "本当に#{group.name}から退会しますか？"} %>
    </div>
  </div>
</div>
